<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">
    <android.support.v7.widget.RecyclerView
        android:layout_weight="75"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/RecyclerViewBGLHolder"
        />
    <LinearLayout
        android:layout_weight="25"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ImageButtonHomePage"
                android:layout_gravity="end"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/home"
                />
            <TextView
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mainPageValue"
                android:layout_below="@+id/ImageButtonHomePage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ImageButtonSetBGL"
                android:layout_gravity="end"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/set"
                />
            <TextView
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setEntriesValue"
                android:layout_below="@+id/ImageButtonSetBGL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ButtonAddBGL"
                android:layout_gravity="end"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add"
                />
            <TextView
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addEntryValue"
                android:layout_below="@+id/ButtonAddBGL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>