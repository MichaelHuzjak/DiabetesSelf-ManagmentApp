<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#17b5fe"
        android:text="Find All BGLs"
        android:id="@+id/buttonBGLAll"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/textViewTime" />
    <EditText
        android:layout_weight="1.2"
        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/editTextBGLQueryDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"

        android:onClick="MainShowDatePickerDialog"/>
    <EditText
        android:layout_weight="1"
        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/editTextBGLQueryTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    </LinearLayout>

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find All Before Date"
            android:layout_margin="10dp"
            android:background="#17b5fe"
            android:id="@+id/buttonBGLQueryBefore"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find All After Date"
            android:layout_margin="10dp"
            android:background="#17b5fe"
            android:id="@+id/buttonBGLQueryAfter"
            android:layout_gravity="center_horizontal" />



</LinearLayout>