<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_corning_med"
    android:padding="5dp"
    android:layout_margin="10dp">
    <RadioGroup
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/radioGroupCatType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textEditMedication"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/radioButtonExer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textEditExercise"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/radioButtonDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textEditDiet"
            android:textStyle="bold"
            />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearlayoutMedication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/radioGroupCatType">

        <EditText
            android:id="@+id/editTextPrescDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:hint="Prescribe Description"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_below="@id/linearlayoutMedication"
        android:id="@+id/linearLayoutRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="wrap_content"
            android:text="Repeat"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupRepeat">

            <RadioButton
                android:id="@+id/radioButtonDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily"
                android:textStyle="bold"
                />
            <RadioButton
                android:id="@+id/radioButtonWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly"
                android:textStyle="bold"
                />
        </RadioGroup>
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutPrescDateTime">
            <EditText
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPrescDate"
                android:onClick="showDatePickerDialog"/>
            <EditText
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPrescTime"
                android:onClick="showTimePickerDialog"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight=".4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutPrescAddRemove">
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/imageButtonRemovePresc"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/remove"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>