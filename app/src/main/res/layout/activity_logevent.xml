<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/relativelayoutlogevent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LogeventActivity">

        <!--<android.support.v7.widget.RecyclerView-->
            <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:id="@+id/multipleRowRecyclerView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scrollbars="none"/>-->

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/relativelayouteventfabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativelayoutDiet"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/textViewDiet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/addDietString"
                            android:textStyle="bold"/>

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fabDiet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/fab_margin"
                            android:layout_centerInParent="true"
                            android:src="@android:drawable/ic_dialog_email"
                            app:backgroundTint="@color/colorPrimary"
                            android:layout_below="@+id/textViewDiet"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayoutExer"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/textViewExer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/addExerString"
                            android:textStyle="bold"/>

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fabExer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/fab_margin"
                            android:layout_centerInParent="true"
                            android:src="@android:drawable/ic_dialog_email"
                            app:backgroundTint="@color/colorPrimary"
                            android:layout_below="@+id/textViewExer"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayoutMeds"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false">

                        <TextView
                            android:id="@+id/textViewMeds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/addMedsString"
                            android:textStyle="bold"/>

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fabMeds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/fab_margin"
                            android:src="@android:drawable/ic_dialog_email"
                            app:backgroundTint="@color/colorPrimary"
                            android:layout_below="@+id/textViewMeds"/>
                </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayoutlistview"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_below="@+id/relativelayouteventfabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/logEventRecyclerView"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </RelativeLayout>


</RelativeLayout>

